{
    "name": "accu/postmen-sdk",
    "description": "SDK for Postmen.com Parcel Shipping API.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Accu Limited",
            "email": "opensource@accu.co.uk"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2|^8.0|^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5|^7.0",
        "swaggest/json-schema": "^0.12.39"
    },
    "autoload": {
        "psr-4": {
            "Accu\\Postmen\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5|^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Accu\\Postmen\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "@php vendor/bin/phpcs --standard=PSR12 src",
        "test": "@php vendor/bin/phpunit tests"
    }
}
